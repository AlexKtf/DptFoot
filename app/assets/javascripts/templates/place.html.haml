#loader{ data: { 'ng-if' => 'loading' }}
  %img{ data: { 'ng-src' => "#{asset_path('loader.gif')}"} }
#place-block.col-md-12.col-xs-12.animate-opacity{ data: { 'ng-if' => '!loading' }}
  .header
    {{place.name}}

  .row
    .col-md-1
    #participants-block.col-md-6.col-xs-12
      #participants-block-inner
        %h2
          PARTICIPANTS
          .participate-button.animate-opacity.pull-right{ data: { 'ng-if' => 'user && !is_participant' } }
            %button.btn.btn-success{ data: { 'ng-click' => 'participate()' } }
              PARTICIPATE
        #participants
          %slick#slick{ data: { 'slick' => '' } }
            %div{ data: { 'ng-repeat' => 'participations_grouped in participations' } }
              .col-md-12.col-xs-12
                %div{ data: { 'ng-repeat' => 'participation in participations_grouped' } }
                  .participant.col-md-4.col-sm-12.col-xs-12
                    %img{ 'ng-src' => ''}
                    {{participation.user.username}}
    #place-infos-block.col-md-4.col-xs-12
      #place-infos-block-inner
        %h2
          ACCES TERRAIN
        #place-infos.col-md-12
          .col-md-12
            %img{ data: { 'ng-src' => '{{place.image_link}}' } }
          .col-md-12
            {{place.address}}, {{place.town}}
            
    .col-md-1
  .row
    .col-md-1
    #votes-block.col-md-6.col-xs-12
      #votes-block-inner
        %h2
          VOTES DE LA JOURNEE
        #votes

    #past-mvp-block.col-md-4.col-xs-12
      #past-mvp-block-inner
        %h2
          MEILLEUR JOUEUR D'HIER
        #past-mvp